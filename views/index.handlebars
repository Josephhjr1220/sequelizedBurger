<div class="container">

  <h1>Eat-Da-Burger!</h1>

<div class="row">
  <div class="col-md-6">
    <ul>

        {{#each Burger}}
            {{#unless devoured}}
            <li>
                {{burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit" class="btn btn-secondary">Devour It!</button>
                </form>
            </li>
            {{/unless}}
        {{/each}}
    </ul>

  </div>
 <div class="col-md-6">
     <h2>Maybe you should stop...</h2>
   <ul>
     {{#each Burger}}
        {{#if devoured}}
         <li>
           {{burger_name}} Eaten!
     </li>
    {{/if}}
{{/each}}
   </ul>

 </div>
</div>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>  
</div>
</div>

